<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".OwnerInputForm">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                style="@style/Base.TextAppearance.AppCompat.Body2"
                android:text="Додайте інформацію про користувача"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView12"/>

        <TextView
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:text="Ім'я"
                android:layout_width="91dp"
                android:layout_height="wrap_content"
                android:id="@+id/nameView"/>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text=""
                android:ems="10"
                android:id="@+id/nameToAdd"/>

        <TextView
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:text="Прізвище"
                android:layout_width="93dp"
                android:layout_height="wrap_content"
                android:id="@+id/surnameView"/>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text=""
                android:ems="10"
                android:id="@+id/surnameToAdd"/>

        <TextView
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:text="Телефон"
                android:layout_width="93dp"
                android:layout_height="wrap_content"
                android:id="@+id/telephoneView"/>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text=""
                android:ems="10"
                android:id="@+id/telephoneToAdd"/>

        <TextView
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:text="Номерний знак"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/licensePlateView"/>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text=""
                android:ems="10"
                android:id="@+id/licensePlateToAdd"/>

        <Button
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:text="Додати запис"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/addRecord"/>

        <Button
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:text="На головний екран"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fromInpFormToMainScreen"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>