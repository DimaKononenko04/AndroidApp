<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="Work log"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView"/>

        <Button
                android:text="Виберіть Зображення"
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/chooseImage"/>

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="344dp"
                app:srcCompat="@android:drawable/stat_sys_download"
                android:id="@+id/imageView"/>

        <Button
                android:text="Розпізнати номерний знак"
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sendToLpr"/>

        <TextView
                android:text="Розпізнаний номерний знак зявиться тут"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recognitionResultPlaceholder"/>

        <Button
                android:text="Переглянути інформацію власника"
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/getOwnerInfo"/>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>